<?xml version="1.0" encoding="UTF-8"?>

<?import de.regatta_hd.commons.fx.control.CheckBoxTableCellFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="de.regatta_hd.ui.pane.RacesController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" />
  </padding>

  <children>
    <ToolBar GridPane.columnIndex="0" GridPane.rowIndex="0">
      <Button fx:id="refreshBtn" onAction="#refresh" text="%common.refresh" />
      <Button fx:id="setDistancesBtn" onAction="#setDistances" text="%OffersView.setDistances" />
      <Button fx:id="setMastersAgeClassesBtn" onAction="#setMastersAgeClasses" text="%OffersView.setMastersAgeClasses" />
    </ToolBar>
    <SplitPane dividerPositions="0.6" orientation="VERTICAL" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
      <items>
        <TableView fx:id="racesTbl">
          <placeholder>
            <Label text="%common.noDataAvailable" />
          </placeholder>
          <columns>
            <TableColumn fx:id="idCol" reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.id" prefWidth="50">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>id</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.numberAbr" prefWidth="45">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>number</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" sortable="false" text="%common.labelShort" prefWidth="140">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>shortLabel</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" sortable="false" text="%common.label" prefWidth="310">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>longLabel</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" sortable="false" text="%common.comment">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>comment</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.distance" prefWidth="80">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>distance</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="groupModeCol" resizable="false" reorderable="false" style="-fx-alignment: CENTER;"
              text="%OffersView.groupModeCol.text" prefWidth="70">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>groupMode</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.lightweightAbr" prefWidth="60">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>lightweight</property>
                </PropertyValueFactory>
              </cellValueFactory>
              <cellFactory>
                <CheckBoxTableCellFactory fx:factory="readonly" />
              </cellFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%OffersView.setCol.text" prefWidth="60">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>set</property>
                </PropertyValueFactory>
              </cellValueFactory>
              <cellFactory>
                <CheckBoxTableCellFactory fx:factory="readonly" />
              </cellFactory>
            </TableColumn>
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>

        <TableView fx:id="regsTbl">
          <placeholder>
            <Label text="%common.noDataAvailable" />
          </placeholder>
          <columns>
            <TableColumn fx:id="regsIdCol" reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.id" prefWidth="50">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>id</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.bibAbr" prefWidth="45">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>bib</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn resizable="true" reorderable="false" sortable="true" text="%common.club" prefWidth="200">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>clubNameAbr</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn resizable="false" reorderable="false" sortable="false" style="-fx-alignment: CENTER;" text="%common.boat" prefWidth="50">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>boatNumber</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn resizable="true" reorderable="false" sortable="true" text="%common.city" prefWidth="140">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>clubCity</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.signedOff" prefWidth="80">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>signedOff</property>
                </PropertyValueFactory>
              </cellValueFactory>
              <cellFactory>
                <CheckBoxTableCellFactory fx:factory="readonly" />
              </cellFactory>
            </TableColumn>
            <TableColumn reorderable="false" resizable="false" style="-fx-alignment: CENTER;" text="%common.alternativeTo" prefWidth="80">
              <cellValueFactory>
                <PropertyValueFactory>
                  <property>alternativeTo</property>
                </PropertyValueFactory>
              </cellValueFactory>
            </TableColumn>
          </columns>
        </TableView>
      </items>
    </SplitPane>
  </children>

  <columnConstraints>
    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
    <RowConstraints />
  </rowConstraints>
</GridPane>
