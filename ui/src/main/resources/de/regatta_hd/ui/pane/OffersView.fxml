<?xml version="1.0" encoding="UTF-8"?>

<?import de.regatta_hd.commons.fx.control.CheckBoxTableCellFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="de.regatta_hd.ui.pane.OffersController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" />
  </padding>

  <children>
    <ToolBar GridPane.columnIndex="0" GridPane.rowIndex="0">
      <Button fx:id="refreshBtn" onAction="#refresh" text="%common.refresh" />
      <Button fx:id="setDistancesBtn" onAction="#setDistances" text="%OffersView.setDistances" />
      <Button fx:id="setMastersAgeClassesBtn" onAction="#setMastersAgeClasses" text="%OffersView.setMastersAgeClasses" />
    </ToolBar>
    <TableView fx:id="racesTbl" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
      <placeholder>
        <Label text="%common.noDataAvailable" />
      </placeholder>
      <columns>
        <TableColumn fx:id="idCol" reorderable="false" style="-fx-alignment: CENTER;" text="%common.id">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>id</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" style="-fx-alignment: CENTER;" text="%common.numberAbr">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>number</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" sortable="false" text="%common.labelShort">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>shortLabel</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" sortable="false" text="%common.label">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>longLabel</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" sortable="false" text="%common.comment">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>comment</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" style="-fx-alignment: CENTER-RIGHT;" text="%common.distance">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>distance</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" fx:id="groupModeCol" style="-fx-alignment: CENTER;"
          text="%OffersView.groupModeCol.text">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>groupMode</property>
            </PropertyValueFactory>
          </cellValueFactory>
        </TableColumn>
        <TableColumn reorderable="false" style="-fx-alignment: CENTER;" text="%OffersView.lightweightCol.text">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>lightweight</property>
            </PropertyValueFactory>
          </cellValueFactory>
          <cellFactory>
            <CheckBoxTableCellFactory fx:factory="readonly" />
          </cellFactory>
        </TableColumn>
        <TableColumn reorderable="false" style="-fx-alignment: CENTER;" text="%OffersView.setCol.text">
          <cellValueFactory>
            <PropertyValueFactory>
              <property>set</property>
            </PropertyValueFactory>
          </cellValueFactory>
          <cellFactory>
            <CheckBoxTableCellFactory fx:factory="readonly" />
          </cellFactory>
        </TableColumn>
      </columns>
      <columnResizePolicy>
        <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
  </children>

  <columnConstraints>
    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
    <RowConstraints />
  </rowConstraints>
</GridPane>
