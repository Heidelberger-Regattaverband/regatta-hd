<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="de.regatta_hd.ui.pane.ResultsController">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>

  <children>
    <ToolBar GridPane.columnIndex="0" GridPane.rowIndex="0">
      <items>
        <Button fx:id="refreshBtn" onAction="#handleRefreshOnAction" text="%common.refresh" />
      </items>
    </ToolBar>

    <TableView fx:id="resultsTbl" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
      GridPane.vgrow="ALWAYS">
      <placeholder>
        <Label text="%common.loadData" />
      </placeholder>
    </TableView>
  </children>

  <columnConstraints>
    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" />
  </columnConstraints>

</GridPane>

