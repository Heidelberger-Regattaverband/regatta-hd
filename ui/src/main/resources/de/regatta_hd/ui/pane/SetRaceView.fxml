<?xml version="1.0" encoding="UTF-8"?>

<?import de.regatta_hd.ui.control.FilterComboBox?>
<?import de.regatta_hd.ui.pane.OfferStringConverter?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="de.regatta_hd.ui.pane.SetRaceController">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>

  <children>
    <Label text="%SetRaceView.TargetOfferLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <FilterComboBox fx:id="targetRaceCbo" maxWidth="Infinity" onAction="#handleTargetOfferOnAction" promptText="%SetRaceView.TargetOfferComboBox.promptText" GridPane.columnIndex="1" GridPane.rowIndex="0">
      <converter>
        <OfferStringConverter />
      </converter>
    </FilterComboBox>

    <Label text="%SetRaceView.SourceOfferLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="srcRaceCbo" maxWidth="Infinity" onAction="#handleSourceOfferOnAction" promptText="%SetRaceView.TargetOfferComboBox.promptText" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <converter>
        <OfferStringConverter />
      </converter>
    </ComboBox>

    <ToolBar GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <Button fx:id="refreshBtn" onAction="#handleRefreshOnAction" text="%SetRaceView.RefreshBtn.text" />
        <Button fx:id="setRaceBtn" onAction="#handleSetRaceOnAction" text="%SetRaceView.SetRaceBtn.text" />
        <Button fx:id="deleteBtn" onAction="#handleDeleteOnAction" text="%SetRaceView.DeleteBtn.text" />
    </ToolBar>

    <SplitPane dividerPositions="0.5" orientation="HORIZONTAL" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
      <items>
        <VBox fx:id="sourceVBox" spacing="5">
        </VBox>
        <VBox fx:id="targetVBox" spacing="5">
        </VBox>
      </items>
    </SplitPane>

  </children>
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" />
  </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
