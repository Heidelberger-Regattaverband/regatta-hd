<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import de.regatta_hd.ui.control.FilterComboBox?>
<?import de.regatta_hd.ui.pane.OfferStringConverter?>
<?import de.regatta_hd.ui.pane.RegattaStringConverter?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml"
  fx:controller="de.regatta_hd.ui.pane.SetRaceController">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10" />
  </padding>

  <children>
    <Label text="%SetRaceView.EventLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="regattaCombo" promptText="%SetRaceView.EventComboBox.promptText" maxWidth="Infinity"
      GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#handleEventOnAction">
      <converter>
        <RegattaStringConverter />
      </converter>
    </ComboBox>

    <Label text="%SetRaceView.TargetOfferLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <FilterComboBox fx:id="targetOfferCombo" promptText="%SetRaceView.TargetOfferComboBox.promptText"
      maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleTargetOfferOnAction">
      <converter>
        <OfferStringConverter />
      </converter>
    </FilterComboBox>

    <Label text="%SetRaceView.SourceOfferLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="sourceOfferCombo" promptText="%SetRaceView.TargetOfferComboBox.promptText"
      maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#handleSourceOfferOnAction">
      <converter>
        <OfferStringConverter />
      </converter>
    </ComboBox>

    <ToolBar GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Button fx:id="refreshBtn" text="Aktualisieren" onAction="#handleRefreshOnAction" />
        <Button fx:id="setRaceButton" text="%SetRaceView.SetRaceButton.text" onAction="#handleSetRaceOnAction" />
        <Button fx:id="deleteBtn" text="Einteilung lÃ¶schen" onAction="#handleDeleteOnAction" />
    </ToolBar>

    <SplitPane orientation="HORIZONTAL" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
      <items>
        <VBox fx:id="sourceVBox" spacing="5">
        </VBox>
        <VBox fx:id="targetVBox" spacing="5">
        </VBox>
      </items>
    </SplitPane>

  </children>
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
    <ColumnConstraints hgrow="ALWAYS" fillWidth="true" />
  </columnConstraints>
</GridPane>