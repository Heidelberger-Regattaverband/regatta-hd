<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import de.regatta_hd.ui.pane.OfferStringConverter?>
<?import de.regatta_hd.ui.pane.EventStringConverter?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml"
  fx:controller="de.regatta_hd.ui.pane.SetRaceController">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10" />
  </padding>

  <children>
    <Label text="%SetRaceView.EventLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="eventCombo" promptText="%SetRaceView.EventComboBox.promptText" maxWidth="Infinity"
      GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#handleEventOnAction">
      <converter>
        <EventStringConverter />
      </converter>
    </ComboBox>

    <Label text="%SetRaceView.TargetOfferLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="targetOfferCombo" promptText="%SetRaceView.TargetOfferComboBox.promptText"
      maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleTargetOfferOnAction">
      <converter>
        <OfferStringConverter />
      </converter>
    </ComboBox>

    <Label text="%SetRaceView.SourceOfferLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="sourceOfferCombo" promptText="%SetRaceView.TargetOfferComboBox.promptText"
      maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#handleSourceOfferOnAction">
      <converter>
        <OfferStringConverter />
      </converter>
    </ComboBox>

    <SplitPane orientation="HORIZONTAL" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2">
      <items>
        <VBox fx:id="sourceVBox">
          <Label>Left</Label>
        </VBox>
        <VBox fx:id="targetVBox">
          <Label>Right</Label>
        </VBox>
      </items>
    </SplitPane>

    <HBox alignment="BOTTOM_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
      <children>
        <Button fx:id="setRaceButton" prefWidth="100" defaultButton="true" text="%SetRaceView.SetRaceButton.text"
          alignment="CENTER" onAction="#handleSetRaceOnAction" />
      </children>
    </HBox>
  </children>
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
    <ColumnConstraints hgrow="ALWAYS" fillWidth="true" />
  </columnConstraints>
</GridPane>