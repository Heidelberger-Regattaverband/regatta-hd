<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.regatta_hd.ui.pane.PrimaryController">
  <top>
    <MenuBar fx:id="mainMbar">
      <menus>
        <Menu text="%PrimaryView.dbMenu.text">
          <items>
            <MenuItem fx:id="dbConnectMitm" onAction="#handleDatabaseConnect" text="%PrimaryView.dbConnectMitm.text" />
            <MenuItem fx:id="dbDisconnectMitm" onAction="#handleDatabaseDisconnect" text="%PrimaryView.dbDisconnectMitm.text" />
            <SeparatorMenuItem />
            <MenuItem onAction="#handleExit" text="%PrimaryView.MenuItem.Exit.text" />
          </items>
        </Menu>
        <Menu text="%PrimaryView.adminMenu.text">
          <items>
            <MenuItem fx:id="eventsMitm" onAction="#handleEvents" text="%PrimaryView.regattasMitm.text" />
            <MenuItem fx:id="offersMitm" onAction="#handleOffers" text="%PrimaryView.racesMitm.text" />
            <MenuItem fx:id="divisionsMitm" onAction="#handleSetRace" text="%PrimaryView.setRaceMitm.text" />
            <MenuItem fx:id="scoreMitm" onAction="#handleScore" text="%PrimaryView.scoreMitm.text" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>

  <left>
  </left>

  <center>
  </center>

  <right>
  </right>

  <bottom>
  </bottom>

</BorderPane>
