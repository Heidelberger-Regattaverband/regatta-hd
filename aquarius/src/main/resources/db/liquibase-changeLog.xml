<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

  <changeSet author="markus@ofterdinger.de" id="1">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="HRV_AgeClass" />
      </not>
    </preConditions>
    <createTable tableName="HRV_AgeClass">
      <column name="id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HRV_AgeClass" referencedTableName="AgeClass" referencedColumnNames="AgeClass_ID" foreignKeyName="FK_AgeClass" />
      </column>
      <column name="distance" type="SMALLINT">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>

  <changeSet author="liquibase-docs" id="2" runOnChange="true">
    <loadUpdateData encoding="UTF-8" file="HRV_AgeClass.csv" quotchar="&quot;" relativeToChangelogFile="true" separator="," tableName="HRV_AgeClass" primaryKey="id">
      <column header="id" name="id" type="NUMERIC" />
      <column header="distance" name="distance" type="NUMERIC" />
      <column header="comment" type="SKIP" />
    </loadUpdateData>
  </changeSet>

  <changeSet author="markus@ofterdinger.de" id="3">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="HRV_Offer" />
      </not>
    </preConditions>
    <createTable tableName="HRV_Offer">
      <column name="id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HRV_Offer" referencedTableName="Offer" referencedColumnNames="Offer_ID" foreignKeyName="FK_Offer" />
      </column>
      <column name="isSet" type="BOOLEAN">
        <constraints nullable="true" />
      </column>
    </createTable>
  </changeSet>

  <changeSet id="4" author="markus@ofterdinger.de">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="HRV_Score" />
      </not>
    </preConditions>
    <createTable tableName="HRV_Score">
      <column name="club_id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_Score_Club_Event" referencedTableName="Club" referencedColumnNames="Club_ID" foreignKeyName="FK_Score_Club" />
      </column>
      <column name="event_id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_Score_Club_Event" referencedTableName="Event" referencedColumnNames="Event_ID" foreignKeyName="FK_Score_Event" />
      </column>
      <column name="rank" type="SMALLINT" />
      <column name="points" type="FLOAT" />
    </createTable>
  </changeSet>

  <changeSet id="5" author="markus@ofterdinger.de">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="HRV_LogRecord" />
      </not>
    </preConditions>
    <createTable tableName="HRV_LogRecord">
    <column name="instant" type="TIMESTAMP" />
    <column name="hostName" type="VARCHAR(64)"/>
    <column name="hostAddress" type="VARCHAR(15)"/>
    <column name="levelName" type="VARCHAR(8)"/>
    <column name="levelValue" type="INTEGER"/>
    <column name="logger" type="VARCHAR(256)"/>
    <column name="sourceClass" type="VARCHAR(256)"/>
    <column name="sourceMethod" type="VARCHAR(128)"/>
    <column name="message" type="VARCHAR(256)"/>
    <column name="exception" type="VARCHAR(256)"/>
    <column name="throwableClass" type="VARCHAR(256)"/>
    <column name="stacktrace" type="LONGVARCHAR"/>
    <column name="threadId" type="INTEGER"/>
    </createTable>
  </changeSet>
</databaseChangeLog>